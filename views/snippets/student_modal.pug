div(class="modal fade", id="student-detail-modal", tabindex="-1", role="dialog", aria-labelledby="studentDetailLabel", aria-hidden="true")
  div(class="modal-dialog modal-lg")
    div(class="modal-content")
      div(class="modal-header")
        h5(class="modal-title")
        button(type="button", class="close", data-dismiss="modal", aria-label="Close")
          span(aria-hidden="true") &times;
      div(class="modal-body")
        p(class="modal-ip")
        p Number of lines: &nbsp;
          span(class="modal-number-of-lines") 0
        p Started at &nbsp;
          span(class="modal-started-at")
        div(class="modal-command-history")
        p Finished at &nbsp;
          span(class="modal-finished-at")
      div(class="modal-footer")
        if modal_evaluate
          form(action=".", method="POST", class="modal-evaluate-form")
            input(type="hidden", name="modal_evaluate_user", value="")
            div(class="form-inline")
              textarea(name="comment", class="form-control", placeholder="Comment", cols="30")
              div
                div(class="form-inline")
                  label(for="modal_evaluate_score", class="col-form-label m-2 no-top-margin") Score
                  input(type="number", class="form-control m-2 no-top-margin", name="modal_evaluate_score", id="modal_evaluate_score", value="", step=0.01)
                div(class="form-inline")
                  label(for="modal_evaluate_bonus", class="col-form-label m-2 no-top-margin") Bonus
                  input(type="number", class="form-control m-2 no-top-margin", name="modal_evaluate_bonus", id="modal_evaluate_bonsu", value="", step=0.01)
              button(type="submit", name="modal_evaluate_btn", class="btn btn-primary m-2") Save
              div(class="loader")
